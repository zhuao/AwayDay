<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/session_title"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:singleLine="true"
            tools:text="AwayDay keynote"/>
        <TextView
            android:id="@+id/session_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            tools:text="02:35-03:05"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/session_speaker_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Speaker:"/>
        <TextView
            android:id="@+id/session_speaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            tools:text="Xiao Ming"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/session_location_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location:"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/session_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            tools:text="Jiu Hua"/>
    </LinearLayout>
    <TextView
        android:id="@+id/session_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="AwayDay keynote"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        tools:visibility="visible"/>
</LinearLayout>